<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <block class="Tym17\MailPerformance\Block\Adminhtml\Overview" name="Overview" template="Tym17_MailPerformance::settings/overview.phtml" />
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Tym17\MailPerformance\Block\Adminhtml\Settings\Tabs" name="setting_tabs">
                <block class="Tym17\MailPerformance\Block\Adminhtml\Settings\Tab\Main" name="settings_tabs_main"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">main_section</argument>
                    <argument name="block" xsi:type="string">settings_tabs_main</argument>
                </action>
            </block>
        </referenceContainer>
    </body>
</page>
